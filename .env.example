# RAG Backend Environment Configuration
# Copy this to .env and fill in your actual values

# Application Settings
APP_NAME="RAG Backend"
APP_VERSION="1.0.0"
DEBUG=False

# Database
DATABASE_URL="sqlite:///./rag_backend.db"

# Microservices Configuration
PDF_PARSER_HOST="localhost"
PDF_PARSER_PORT=8000
PDF_PARSER_TIMEOUT=300

DATAPREP_HOST="localhost"
DATAPREP_PORT=5000
DATAPREP_TIMEOUT=300

RETRIEVER_HOST="localhost"
RETRIEVER_PORT=7000
RETRIEVER_TIMEOUT=30

# Qdrant Vector Database
QDRANT_HOST="localhost"
QDRANT_PORT=6333
QDRANT_COLLECTION_NAME="rag-qdrant"

# Groq LLM Configuration
GROQ_API_KEY="your-groq-api-key-here"
GROQ_MODEL="llama-2-70b-chat"
LLM_TIMEOUT=30

# Embedding Model
EMBEDDING_MODEL="all-mpnet-base-v2"
